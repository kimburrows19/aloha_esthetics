<widgets>
    <instagramwidget type="instagramwidget/widget">
        <name>Instagram Widget</name>
        <description type="desc">Add instagramm widget</description>
        <is_email_compatible>1</is_email_compatible>
        <parameters>      
			<block_title translate="label">
				<label>Widget Block Title: </label>	  						
				<type>text</type>	  						 
				<comment><![CDATA[Block title for instagram widget]]></comment>
				<value><![CDATA[Instagram Feed]]></value>
                <visible>1</visible>
                <required>1</required>				
				<sort_order>15</sort_order> 						
			</block_title>	          
			<search_by translate="label">
				<label>Show Posts From: </label>	  						
				<type>select</type>
				<source_model>instagramwidget/source_searchBy</source_model>
				<comment><![CDATA[Select tag or username where posts will be taken]]></comment>
                <visible>1</visible>
                <required>1</required>				
				<sort_order>30</sort_order>	  						
			</search_by>
			<search_by_value translate="label">
				<label>Find Posts By: </label>	  						
				<type>text</type>	  						 
				<comment><![CDATA[Enter tag or instagram username where posts will be taken.]]></comment>
                <visible>1</visible>
                <required>1</required>				
				<sort_order>40</sort_order>  						
			</search_by_value>
			<image_resolution translate="label">
				<label>Image Resolution: </label>	  						
				<type>select</type>
				<source_model>instagramwidget/source_imageResolution</source_model>
				<value><![CDATA[thumbnail]]></value>
				<comment><![CDATA[Select instagram image resolution]]></comment>
                <visible>1</visible>
                <required>1</required>				
				<sort_order>50</sort_order>  						
			</image_resolution>	  					
			<posts_count translate="label">
				<label>Post Count: </label>	  						
				<type>text</type>	  						 
				<comment><![CDATA[Amount of posts should be shown]]></comment>
                <visible>1</visible>
                <required>1</required>				
				<value><![CDATA[3]]></value>
				<sort_order>60</sort_order>  						
			</posts_count>	 							            
        </parameters>
    </instagramwidget>
</widgets> 